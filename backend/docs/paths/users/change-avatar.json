{
  "/users/change-avatar": {
    "patch": {
      "summary": "Change user avatar",
      "tags": [
        "Users"
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "avatarNumber": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Avatar changed",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}