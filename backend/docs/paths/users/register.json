{
  "/users/register": {
    "post": {
      "summary": "Register a new user",
      "tags": [
        "Users"
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "username",
                "email",
                "password"
              ],
              "properties": {
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "password": {
                  "type": "string",
                  "minLength": 6
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Verification key generated",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "verificationKey": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Bad Request"
        }
      }
    }
  }
}